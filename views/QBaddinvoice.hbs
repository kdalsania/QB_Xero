<form action="/qb/invoice/add" method="POST">
    <div class="form-group">
      <label for="first name">Account Holder Name:</label>
      <input type="text" class="form-control" name="accname" placeholder="Enter Account Holder Name"  value="{{this.name}}">
    </div>
    <div class="form-group">
      <label for="first name">App name</label>
      <input type="text" class="form-control" name="appname" placeholder="Enter App Name"  value="{{this.app}}">
    </div>
    <div class="form-group">
      <label for="first name">Customer Name:</label>
      <input type="text" class="form-control" id="fname" name="name" placeholder="Enter Customer Name" value="{{this.cname}}">
    </div>
     <div class="form-group">
      <label for="name">Amount:</label>
      <input type="text" class="form-control" name="amount" placeholder="Enter Amount">
    </div>
    <button type="submit" class="btn btn-primary ">Submit</button>
</form>
