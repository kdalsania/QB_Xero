<form action="/xero/contacts/add" method="POST">
    <div class="form-group">
      <label for="first name">Account Holder Name:</label>
      <input type="text" class="form-control" name="accname" placeholder="Enter Account Holder Name">
    </div>
    <div class="form-group">
      <label for="first name">App name</label>
      <input type="text" class="form-control" name="appname" placeholder="Enter App Name">
    </div>
     <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name">
    </div>
    <div class="form-group">
       <label for="name">Address:</label>
       <input type="text" class="form-control" style="margin-bottom: 15px" id="line1" name="line1" placeholder="Enter Address">
       <input type="text" class="form-control" style="margin-bottom: 15px" id="line2" name="line2" placeholder="Enter Area">
       <input type="text" class="form-control" style="margin-bottom: 15px" id="city" name="city" placeholder="Enter City">
       <input type="text" class="form-control" style="margin-bottom: 15px" id="code" name="code" placeholder="Enter Postal Code">
   </div>
   <div class="form-group">
      <label for="name">Email Address:</label>
      <input type="text" class="form-control" id="email" name="email" placeholder="Enter Email Address">
  </div>
  <div class="form-group">
     <label for="name">Phone Number:</label>
     <input type="text" class="form-control" id="number" name="number" placeholder="Enter Email Address">
 </div>
    <button type="submit" class="btn btn-primary ">Submit</button>
</form>
